<%= link_to group_deals_path(group) do %>
  <div class="category d-flex p-2 bg-white border-gray-1 rounded my-1">
    <img src="<%= group.icon %>" alt="image" class="category-image align-self-center border border-gray-1 rounded">
    <div class="flex-grow-1 d-flex flex-column justify-content-end mx-1">
      <h3 class="color-text font-proxima-bold fs-6 no-link">
        <%= group.name %>
      </h3>
      <span class="category-date color-text text-decoration-none font-proxima-light">
        <%= group.date %>
      </span>
    </div>
    <span class="align-self-center color-text text-decoration-none font-proxima-light">
      <%= group.total %>
    </span>
  </div>
<% end %>