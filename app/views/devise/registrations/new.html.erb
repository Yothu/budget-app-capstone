<div class="bg-white-1 vh-100">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <nav class="bg-main d-flex justify-content-between p-2 align-items-center">
      <%= link_to root_path, method: :get, type: 'button',class: 'left-arrow'  do %>
        <%= image_tag('navbar-left-arrow.png', :size => "23x23") %>
      <% end %>
      <h2 class="font-proxima-light fw-bold my-0 text-white fs-6">REGISTER</h2>
      <%= f.submit "Next" , class: 'font-proxima-light bg-main border-0 text-white btn p-0' %>
    </nav>
    
    <div class="d-flex flex-column w-100 px-3 my-3 bg-white">
      <div class="d-flex flex-column align-items-stretch">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Full name', class: 'no-outline border-0 color-text py-2' %>
      </div>
      <hr class="my-1">
      <div class="d-flex flex-column align-items-stretch">
        <%= f.email_field :email, autocomplete: "email", placeholder: 'Email', class: 'no-outline border-0 color-text py-2' %>
      </div>
      <hr class="my-1">
      <div class="d-flex flex-column align-items-stretch">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class: 'no-outline border-0 color-text py-2' %>
      </div>
      <hr class="my-1">
      <div class="d-flex flex-column align-items-stretch">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm Password', class: 'no-outline border-0 color-text py-2' %>
      </div>
    </div>
  <% end %>  
  <%= render "devise/shared/error_messages", resource: resource %>
</div>